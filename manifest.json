{
  "manifest_version": 3,
  "name": "Улучшение выделенного текста с помощью OpenAI",
  "version": "1.1",
  "description": "Отправляет выделенный текст в OpenAI для улучшения качества",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["prompts.json", "resultWindow.html", "resultWindow.css"],
      "matches": ["<all_urls>"],
      "js": ["dist/content.bundle.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  }
}
